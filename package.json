{
  "name": "lily-pad-assistant",
  "version": "1.1.0",
  "description": "Simple commands bot for the Lily Pad Telegram Chat.",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf dist && tsc && tsc-alias && npm run copy-files",
    "copy-files": "copyfiles -u 1 \"src/**/*.txt\" dist",
    "dev": "tsx --watch src/index.ts",
    "start": "node --experimental-specifier-resolution=node dist/index.js",
    "start-pm2": "pm2 start dist/index.js --name lily-pad-assistant --node-args=\"--experimental-specifier-resolution=node\"",
    "type-check": "tsc --project tsconfig.json --pretty --noEmit"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.0.3",
    "telegraf": "^4.12.2"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "tsc-alias": "^1.8.5",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^3.12.6",
    "typescript": "^5.0.4"
  }
}
